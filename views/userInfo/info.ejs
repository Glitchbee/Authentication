<% layout('layouts/boilerplate') %>

    <div style="min-height: 70vh;" class="container d-flex justify-content-center align-items-center mt-4">
        <div class="row">
            <div class="col-xl-6">
                <div class="card bg-secondary-subtle border-secondary p-1" style="width: 30rem;">
                    <div class="card-body">
                        <h2 class="card-title text-center fw-bolder my-4">User Details</h2>

                        <div class="d-flex mb-3">
                            <h4 class="card-title">Name:</h4>
                            <p class="card-text mx-3 fs-5">
                                <%= user.username %>
                            </p>
                        </div>

                        <div class="d-flex mb-3">
                            <h4 class="card-title">Email:</h4>
                            <p class="card-text mx-3 fs-5">
                                <%= user.email %>
                            </p>
                        </div>

                        <div class="d-flex mb-3">
                            <% let edu=[]; user.addlInfo.forEach(i=> {
                                edu.push(i.education);
                                });
                                %>
                                <% if(edu.length) {%>
                                <h4 class="card-title">Education:</h4>
                                <p class="card-text mx-3 fs-5">
                                    <%= edu.join(', ') %>
                                    <% } %>
                        </p>
                    </div>

                    <div class="d-flex mb-3">
                        <% 
                        let hob = [];
                        user.addlInfo.forEach(i => {
                            hob.push(...i.hobbies);
                        });
                        %>

                        <% if(hob.length) {%>
                        <h4 class="card-title">Hobbies:</h4>
                        <p class="card-text mx-3 fs-5">
                            <%= hob.join(' , ') %>
                        </p>
                        <% } %>
                    </div>

                    <div class="d-flex justify-content-center my-4">
                        <a class="btn btn-outline-dark me-4" role="button" aria-disabled="true" href="/user/<%= user._id %>/moreinfo">Add-More-Info</a>
                        <a class="btn btn-outline-primary" role="button" aria-disabled="true" href="/user/<%= user._id %>/newblog">Add-New-Blog</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>